@page
@model RetailMonolith.Pages.Checkout.IndexModel
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (!Model.Lines.Any())
{
<div class="alert alert-warning">Your cart is empty.</div>
}
else
{
<table class="table" style="border-radius:16px; box-shadow:0 2px 12px rgba(0,0,0,0.07); overflow:hidden;">
    <thead>
        <tr>
            <th>Item</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Lines)
        {
            <tr>
                <td>@line.Name</td>
                <td>@line.Qty</td>
                <td>@line.Price.ToString("C")</td>
                <td>@(line.Price* line.Qty).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mt-4">
    <h4 style="font-size:1.18rem; font-weight:600; color:#1d1d1f;">Total: @Model.Total.ToString("C")</h4>
</div>

<form method="post" class="mt-4" style="max-width:400px; margin:auto;">
    <div class="form-group mb-3">
        <label for="paymentToken" style="font-weight:500; color:#86868b;">Payment Token (Mock)</label>
        <input asp-for="PaymentToken" class="form-control" style="border-radius:10px; font-size:1.05rem;" />
    </div>
    <button type="submit" class="btn btn-success w-100" style="font-size:1.08rem; font-weight:500; border-radius:12px; min-width:180px;">Complete Checkout</button>
</form>
}