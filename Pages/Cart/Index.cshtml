@page
@model RetailMonolith.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Shopping Cart";
}


<h2>Your Cart</h2>

@if (!Model.Lines.Any())
{
    <p> Cart is empty.</p>
}
else
{
    <table class="table" style="border-radius:16px; box-shadow:0 2px 12px rgba(0,0,0,0.07); overflow:hidden;">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Unit</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Lines.Count; i++)
            {
                var line = Model.Lines[i];
                <tr>
                    <td>@line.Name</td>
                    <td>@line.Quantity</td>
                    <td>@line.Price.ToString("c")</td>
                    <td>
                        <form method="post" asp-page-handler="Remove" style="display:inline;">
                            <input type="hidden" name="itemName" value="@line.Name" />
                            <button type="submit" class="btn btn-danger btn-sm" style="font-size:1.02rem; border-radius:10px; min-width:90px;">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h4 style="font-size:1.18rem; font-weight:600; color:#1d1d1f;">Total: @Model.Total.ToString("C")</h4>
        <a class="btn btn-success" href="/Checkout" style="font-size:1.08rem; font-weight:500; border-radius:12px; min-width:180px;">Proceed to Checkout</a>
    </div>
}